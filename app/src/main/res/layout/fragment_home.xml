<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment" >


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                android:background="@drawable/rectangle3"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:text="Total Stock Value"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Stock_Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="10dp"
                        android:gravity="end"
                        android:layout_marginEnd="5dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/green"
                        android:text="₹ 00.00"/>

                    <ImageView
                        android:id="@+id/Stock_Status_icon"
                        android:layout_width="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/arrow_up"
                        android:layout_marginStart="5dp"
                        android:layout_height="20dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/rectangle7"
                    android:layout_marginHorizontal="6dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/no_1_stock"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:layout_marginStart="5dp"
                        android:textSize="12sp"
                        android:text="#1. Ziper :"/>

                    <TextView
                        android:id="@+id/no_1_stock_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:padding="5dp"
                        android:gravity="end"
                        android:layout_marginEnd="5dp"
                        android:textSize="11sp"
                        android:text="₹ 00.00"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/rectangle7"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/no_2_stock"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:layout_marginStart="5dp"
                        android:textSize="12sp"
                        android:text="#2. K.P :"/>

                    <TextView
                        android:id="@+id/no_2_stock_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:padding="5dp"
                        android:gravity="end"
                        android:layout_marginEnd="5dp"
                        android:textSize="11sp"
                        android:text="₹ 00.00"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_marginHorizontal="6dp"
                    android:background="@drawable/rectangle7"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/no_3_stock"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:layout_marginStart="5dp"
                        android:textSize="12sp"
                        android:text="#3. Safal :"/>

                    <TextView
                        android:id="@+id/no_3_stock_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:padding="5dp"
                        android:gravity="end"
                        android:layout_marginEnd="5dp"
                        android:textSize="11sp"
                        android:text="₹ 00.00"/>

                </LinearLayout>






            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                android:background="@drawable/rectangle3"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    android:text="Total Dues Amount"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="10dp"
                        android:gravity="end"
                        android:layout_marginEnd="5dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/red"
                        android:text="₹ 00.00"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/arrow_down"
                        android:layout_marginStart="5dp"
                        android:layout_height="20dp"/>

                </LinearLayout>



            </LinearLayout>






        </LinearLayout>








    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>